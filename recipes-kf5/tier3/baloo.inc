DESCRIPTION = "Baloo"
HOMEPAGE = "https://api.kde.org/frameworks/baloo/html/index.html"
LICENSE = "LGPL-2.1"
PR = "r0"

DEPENDS = " \
    libxml2-native \
    qtbase \
    qtdeclarative \
    kcoreaddons \
    kcoreaddons-native \
    kconfig \
    kconfig-native \
    kdbusaddons \
    kidletime \
    solid \
    kfilemetadata \
    kcrash \
    kio \
    kauth-native \
    lmdb \
"

SRC_URI = "git://invent.kde.org/frameworks/${BPN};nobranch=1;protocol=https"
S = "${WORKDIR}/git"

inherit cmake_kf5
inherit ki18n
inherit reuse_license_checksums

FILES_${PN} += " \
    ${libdir}/plugins/kf5/kio/*.so \
    ${libdir}/plugins/kf5/kded/*.so \
    ${libdir}/qml/org/kde/baloo/* \
    ${libdir}/qml/org/kde/baloo/experimental/* \
    ${datadir}/icons/hicolor/128x128/apps/baloo.png \
"

RDEPENDS_${PN} += "lmdb"
