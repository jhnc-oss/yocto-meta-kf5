    ${datadir}/emoticons/EmojiOne/*.png \
    ${datadir}/emoticons/EmojiOne/emoticons.xml \
    ${datadir}/emoticons/Breeze/*.png \
    ${datadir}/emoticons/Breeze/emoticons.xml \
"
